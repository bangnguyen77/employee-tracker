<h1><%= @division.name() %></h1>

<h1>Update <%=@division.name() %> </h1>
<form action="/divisions/<%= @division.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Rename this division:</label>
  <input id="name" name="name" type="text">
  <button type="submit">Update</button>
</form>

<h1>Delete This Division</h1>
<form action="/divisions/<%= @division.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete division</button>
</form>

<h1>Add an employee to <%= @division.name() %> </h1>
  <form action="/divisions/<%= @division.id() %>/employees" method="post">
    <input id="division_id" name="division_id" type="hidden" value="<%= @division.id() %>">
    <label for="employee_name">Employee Name:</label>
    <input id="employee_name" name="employee_name" type="text">
    <button type="submit">Add employee</button>
  </form>

<h1>All of <%= @division.name() %>'s employees!</h1>
<% if @division.employees().any?() %>
  <ul>
    <% @division.employees().each() do |employee| %>
      <li><%= employee.name() %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are no employees for this division!!!!</p>
<% end %>

<a href="/">home</a>
